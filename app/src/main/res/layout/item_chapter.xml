<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_5">

    <TextView
        android:id="@+id/tvChapterName"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/colorIndigo900"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/WrapContent"/>

    <TextView
        android:id="@+id/tvDateCreated"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/colorBlueGrey300"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvChapterName"
        app:layout_constraintTop_toBottomOf="@+id/tvChapterName"
        style="@style/WrapContent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/tvDateCreated"
        app:layout_constraintTop_toTopOf="@+id/tvDateCreated"
        app:srcCompat="@drawable/ic_view"/>

    <TextView
        android:id="@+id/tvView"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/colorBlueGrey300"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        style="@style/WrapContent"/>

</android.support.constraint.ConstraintLayout>
